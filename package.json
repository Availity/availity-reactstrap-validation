{
  "name": "microbundle-test",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/reactstrap-validation",
    "packages/docs"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.9.1",
    "@types/reactstrap": "^8.0.4",
    "codecov": "^3.5.0",
    "eslint-config-availity": "^4.0.10",
    "gh-pages": "^2.1.1",
    "husky": "^3.0.1",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "tsdx": "^0.9.2",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "build:ci": "lerna run build --parallel",
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js' 'packages/*/!(storybook|docs)/**/*.js'",
    "lint": "eslint .",
    "nuke": "npm run remove-locks && npm run clean",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lerna": "lerna",
    "codecov:ci": "codecov",
    "link": "lerna link",
    "clean": "lerna clean --yes",
    "test": "tsdx test --env=jsdom",
    "test:watch": "npm run test -- --watchAll",
    "postinstall": "npm run bootstrap",
    "release": "lerna publish",
    "release:ci": "lerna publish --yes",
    "release:canary": "lerna publish -c",
    "add": "sh ./scripts/add.sh",
    "deploy:ci": "gh-pages -d packages/docs/public",
    "updated": "lerna updated",
    "check": "npm-check -u && lerna exec --bail false --concurrency 1 -- npm-check -u"
  },
  "jest": {
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*@availity.*).*$"
    ],
    "coveragePathIgnorePatterns": [
      "packages/reactstrap-validation-old/__test__",
      "packages/docs"
    ],
    "testPathIgnorePatterns": [
      "packages/reactstrap-validation-old/__test__",
      "packages/docs"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "npm test && lint-staged"
    }
  }
}
